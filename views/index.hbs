<!DOCTYPE html>
<html lang="en">
    {{>head}}
    <body>
        <h1>Skate Park</h1>
        <div class="py-4">
            <h2>Lista de participantes</h2>
            <hr/>
            {{#if skaters}}
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Años de experiencia</th>
                        <th scope="col">Especialidad</th>
                        <th scope="col">Estado</th>
                    </tr>
                </thead>
                <tbody>
                {{#each skaters}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td><img src="/assets/images/{{this.email}}.jpg" alt="{{this.nombre}}" width="75px" height="75px"></td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.anos_experiencia}}</td>
                        <td>{{this.especialidad}}</td>
                        {{#if this.estado}}
                        <td class="text-success font-weight-bold">Aprobado</td>
                        {{else}}
                        <td class="text-warning font-weight-bold">En revision</td>
                        {{/if}}
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
                {{/if}}
                </tbody>
            </table>
            <a href="/login">Iniciar Sesión</a> |
            <a href="/register">Registrarme</a>
        </div>
    </body>
</html>